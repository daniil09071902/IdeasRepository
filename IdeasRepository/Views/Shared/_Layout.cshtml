<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        <script src="https://code.jquery.com/jquery-2.2.2.js"></script>
        <script src="https://code.jquery.com/jquery.unobtrusive-ajax.js"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/site.js")"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (Request.IsAuthenticated) 
                            { 
                                if (User.IsInRole("Admin"))
                                {
                                     <li>@Html.ActionLink("All Records", "GetRecords", "Record")</li>
                                }
                                <li>@Html.ActionLink("My Records", "GetUserRecords", "Record")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>Ideas Repository Application</p>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
